{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "es6"
    ],
    "moduleResolution": "node",
    "rootDir": "lib",
    "outDir": "dist",
    "sourceMap": true,
    "alwaysStrict": true,
    "allowJs": false,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "declaration": true
  },
  "include": [
    "lib"
  ]
}